# Flight Workly Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=Flight Workly
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# API base URL for external services
VITE_API_BASE_URL=https://your-api-domain.com

# Payment processing (CHIP integration)
VITE_CHIP_API_KEY=your-chip-api-key
VITE_CHIP_WEBHOOK_SECRET=your-chip-webhook-secret

# =============================================================================
# ERROR TRACKING (Optional but recommended)
# =============================================================================
# Sentry for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn

# LogRocket for session replay
VITE_LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable detailed logging in development
VITE_LOG_LEVEL=debug

# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production
# 4. Consider using a secrets management service for production
