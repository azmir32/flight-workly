# Flight Workly Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Supabase Configuration
# =============================================================================
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# OPTIONAL - Application Configuration
# =============================================================================
VITE_APP_NAME=Flight Workly
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# =============================================================================
# OPTIONAL - External Services
# =============================================================================
# API base URL for backend services
VITE_API_BASE_URL=http://localhost:3000

# Stripe configuration (if using Stripe payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These are automatically set by Vite in development
# NODE_ENV=development
# VITE_DEV=true

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Use environment-specific files: .env.production, .env.staging
# 3. Set up proper secrets management in your deployment platform
# 4. Rotate keys regularly for security
